model SurfCamp {
  id       Int     @id @default(autoincrement())
  name     String
  location String
  price    Int
  photos   String[]
  amenities String[]
  bookings  Booking[]
  reviews  Review[]
}
model User {
  id       Int     @id @default(autoincrement())
  email    String   @unique
  password String
  bookings  Booking[]
  reviews  Review[]
}
model Booking {
  id        Int     @id @default(autoincrement())
  surfCamp  SurfCamp @relation(fields: [surfCampId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  surfCampId Int
  userId    Int
  startDate DateTime
  endDate   DateTime
}
model Review {
  id        Int     @id @default(autoincrement())
  surfCamp  SurfCamp @relation(fields: [surfCampId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  surfCampId Int
  userId    Int
  rating    Int
  comment   String?
}